<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FC6C0C0"
    tools:context=".ui_printer.home.PrinterReceivedOrderMainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2FC6C0C0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2FC6C0C0">

            <TextView
                android:id="@+id/textView410"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_marginTop="8dp"
                android:background="@color/purple_800"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:text="Customer Details"
                android:textColor="@color/white"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ConstraintLayout"
                android:layout_width="397dp"
                android:layout_height="443dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView410">


                <ListView
                    android:id="@+id/lv_custDetails_CROMA"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#2FC6C0C0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/textView50"
                android:layout_width="402dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@color/purple_800"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:text="Order Details"
                android:textColor="@color/white"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="417dp"
                android:layout_height="649dp"
                android:background="#FFFFFF"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView50">

                <ListView
                    android:id="@+id/lv_orderDetails_CROMA"
                    android:layout_width="394dp"
                    android:layout_height="659dp"
                    android:background="#2FC6C0C0"
                    android:hapticFeedbackEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView56"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_marginTop="8dp"
                android:background="@color/purple_800"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:text="Documents of Order"
                android:textColor="@color/white"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

            <LinearLayout
                android:id="@+id/linearLayout30"
                android:layout_width="405dp"
                android:layout_height="277dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView56">

                <ListView
                    android:id="@+id/lv_subOrders_CROMA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2FC6C0C0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="415dp"
                android:layout_height="168dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout30">

                <Button
                    android:id="@+id/btn_Accepted_CROMA"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Accepted"
                    android:textSize="14sp"
                    app:backgroundTint="#FF8F00" />

                <Button
                    android:id="@+id/btn_cancelled_CROMA"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Cancelled"
                    android:textSize="14sp"
                    app:backgroundTint="#FF8F00" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>