<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:statusBarBackground="#FFFFFF"
    tools:context=".ui_customer.Orders.CustOrderFifthActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_bannerPayment"
            android:layout_width="411dp"
            android:layout_height="77dp"
            android:background="#8BC34A"
            android:text="Payment Option"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout25"
            android:layout_width="0dp"
            android:layout_height="249dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bannerPayment">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_COD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delivery" />

                <RadioButton
                    android:id="@+id/rb_onlinePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Online Payment" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_PBEbankRef"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:paddingLeft="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fileType_CVSOD"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Receipt Name" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="127dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:text="Upload Receipt" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button5"
            android:layout_width="168dp"
            android:layout_height="69dp"
            android:layout_marginTop="16dp"
            android:text="Order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout25" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>