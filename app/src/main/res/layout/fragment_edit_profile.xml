<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_customer.Setting.EditProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_purple_800">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="731dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_profileBanner"
                android:layout_width="407dp"
                android:layout_height="61dp"
                android:layout_marginEnd="4dp"
                android:background="@color/purple_800"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Profile Setting"
                android:textColor="@color/white"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="405dp"
                android:layout_height="448dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_profileBanner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_editUsername"
                        android:layout_width="143dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:text="Username"
                        android:textColor="@color/black"
                        android:textColorHint="#FFFFFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_editProfileName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:hint="e.g John Doe"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="?android:attr/textColorHint" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_username_errorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:textColor="@color/red_800"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_editEmailAddress"
                        android:layout_width="132dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:text="Email Address"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_editEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:hint="e.g johndoe@gmail.com"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:textColorHint="?android:attr/textColorHint" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_emailAddress_errorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:textColor="@color/red_800"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:text="Home Address"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_editHomeAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:hint="e.g 185 , Jalan Perak 10 , Taman Bandar Baru Selatan , 31900, Kampar"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:textColorHint="?android:attr/textColorHint"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_homeAddress_ErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:textColor="@color/red_800"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:text="Phone Number"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et__editPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:hint="e.g 014-5567783"
                        android:inputType="textPersonName"
                        android:text="Name" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_hp_errorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:textColor="@color/red_800"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_editPassword"
                        android:layout_width="136dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:hint="e.g R@3qw34"
                        android:inputType="textPersonName"
                        android:text="Name" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_password_errorMessage"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:textColor="@color/red_800"
                    android:textSize="8sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_saveEditProfile"
                android:layout_width="131dp"
                android:layout_height="57dp"
                android:layout_marginStart="152dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="128dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Save"
                android:textSize="14sp"
                app:backgroundTint="#FF8F00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>