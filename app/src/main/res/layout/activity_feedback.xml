<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_customer.feedback.FeedbackActivity">

    <ListView
        android:id="@+id/lv_custFeedback"
        android:layout_width="407dp"
        android:layout_height="395dp"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <EditText
        android:id="@+id/et_CustomerFeedback"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Type in Something..."
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_custFeedback" />

    <Button
        android:id="@+id/btn_saveCustFeedback"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="150dp"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_CustomerFeedback" />


</androidx.constraintlayout.widget.ConstraintLayout>